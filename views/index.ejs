<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <script src="/js/bootstrap.min.js"></script>
  <style>
    html, body {
      height: 100%;
    }
    .fill { 
      min-height: 90vh;
      height: 90vh;
    }
    #chat {
      overflow: scroll;
    }
    #input {
      position: relative;
      bottom: 0;
    }
  </style>
  <title>Socket.IO 채팅</title>
</head>
<body>
  <div class="container fill">
    <h3>Socket.IO 채팅</h3>
    <ul id="chat" class="list-group list-group-flush fill">
      <li class="list-group-item list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">${username}</h5>
        </div>
        <p class="mb-1">${message}</p>
      </li>
    </ul>
    <form id="input-form" class="align-self-end">
      <div class="input-group mb-3">
        <input type="text" class="form-control" id="input" placeholder="전송할 메시지">
        <button class="btn btn-outline-primary" type="submit">전송</button>
      </div>
    </form>
  </div>
  <script>
    let chatList = document.getElementById('chat');
    let inputForm = document.getElementById('input-form');

    //여기에 Socket.IO 코드 작성
    
    inputForm.onsubmit = (e) => {
      e.preventDefault();
      let input = document.getElementById('input');
      let inputValue = input.value;

      //입력값이 없으면 전송 중단
      if(inputValue === "") return;

      console.log(`입력값: ${inputValue}`);
      input.value = "";

      //여기에 Socket.IO 코드 작성
    }

    
  </script>
</body>
</html>